{
    "project": "Sling",
    "plugins": [
      {
        "id": "library",
        "title": "Library",
        "environments": [
          "edit"
        ],
        "url": "/tools/sidekick/library/library.html"
      },
      {
        "id": "tagger",
        "title": "Tagger",
        "environments": [
          "edit"
        ],
        "url": "/tools/sidekick/tagger/tagger.html"
      },
      {
        "id": "assetpicker",
        "title": "My Assets",
        "environments": [
          "edit"
        ],
        "url": "http://localhost:4502/aem/assetpicker.html",
        "isPalette": true,
        "paletteRect": "top: 50px; bottom: 10px; right: 10px; left: auto; width:400px; height: calc(100vh - 60px)"
      },
      {
        "id": "develop",
        "title": "Developement",
        "isBadge": true,
        "badgeVariant": "blue",
        "environments": ["dev"]
      },
      {
        "id": "stage",
        "title": "Preview",
        "isBadge": true,
        "badgeVariant": "orange",
        "environments": ["preview"]
      },
      {
        "id": "live",
        "title": "Published",
        "isBadge": true,
        "badgeVariant": "red",
        "environments": ["live"]
      },
      {
        "id": "prod",
        "title": "Production",
        "isBadge": true,
        "badgeVariant": "red",
        "environments": ["prod"]
      },
      {
        "id": "showblocks",
        "title": "Blocks",
        "event": "showblocks", 
        "environments": ["dev" , "preview"]
      },      
      {
        "id": "showsections",
        "title": "Sections",
        "event": "showsections", 
        "environments": ["dev", "preview"]
      }
    ]
  }